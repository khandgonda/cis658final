<p id="notice"><%= notice %></p>

<p style="border: 2px solid black;font-size :20px;"> 
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p style="border: 2px solid black;font-size :20px;">
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<div style="text-align:center">

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
  <% (0...@post.images.count).each do |image| %>
    <div class="carousel-item">
    <%= image_tag(@post.thumbnail(image)) %>
      </div>
    <% end %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


<% (0...@post.images.count).each do |image| %>
  <%= image_tag(@post.thumbnail(image)) %>
  <% end %>

  <p style="font-size :25px;"><%= social_share_button_tag(@post.title) %></p>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %> |
<%= link_to 'Back', posts_path, class: "btn btn-danger" %>
</div>
